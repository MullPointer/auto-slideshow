{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "tsc: build - tsconfig.json"
		},
		{
			"type": "shell",
			"group": "build",
			"command": "npx tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
			"label": "npx: tailwind watch"
		}
	]
}